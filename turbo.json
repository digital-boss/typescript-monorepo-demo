{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "tsconfig.tsbuildinfo"]
    },
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "clean": {}
  },
  "globalDependencies": [
    "tsconfig.base.json",
    "tsconfig.build.json",
    "tsconfig.json"
  ]
}